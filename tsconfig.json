{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "allowJs": true,

    "moduleResolution": "bundler",
    "isolatedModules": true,
    "noEmit": true,
    "strict": true
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "transpiler": "ts-node/transpilers/swc"
  },
  "exclude": ["**/node_modules"],
  "include": ["*.ts"]
}

